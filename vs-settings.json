{
    "editor.renderWhitespace": "all",
    "editor.wordWrap": "on",
    "editor.fontFamily": "Operator Mono Book, Cartograph CF, Ellograph CF, Menlo, Monaco, 'Courier New', monospace",
    "editor.lineHeight": 2,
    "editor.minimap.maxColumn": 90,
    "editor.minimap.showSlider": "always",
    "workbench.iconTheme": "material-icon-theme",
    "editor.codeActionsOnSave": {

    },
    "[markdown]": {
        "files.trimTrailingWhitespace": false
    },
    "files.trimTrailingWhitespace": true,
    "editor.minimap.renderCharacters": false,
    "editor.scrollbar.horizontalScrollbarSize": 4,
    "editor.scrollbar.verticalScrollbarSize": 4,
    "editor.rulers": [
        80,
		120
    ],
    "redhat.telemetry.enabled": false,
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "window.title": "${activeEditorLong}${separator}${rootName}${separator}${profileName}",
    "editor.fontSize": 11,
    "editor.fontWeight": "normal",
    "workbench.colorTheme": "Night Owl Light",
    "terminal.integrated.fontWeight": "normal",
    "files.insertFinalNewline": true
}
